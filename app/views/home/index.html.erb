<% if user_signed_in? %>
  <h1>Welcome to the Homepage</h1>
  <p>Logged in as <%= current_user.email %></p>

  <h3>Menu:</h3>
    <ul>
      <li><%= link_to 'Account', edit_user_registration_path %></li>
      <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to logout?" } %></li>
    </ul>

<% else %>
  <h1>Welcome! </h1>
  <h2>Sign up or Login with an existing account</h2>
  <p>
    <%= link_to 'Login', new_user_session_path %> or
    <%= link_to 'Sign Up', new_user_registration_path %>
  </p>
<% end %>
