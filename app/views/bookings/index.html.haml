%h1 Bookings

= link_to 'New Booking', new_booking_path

%table
  %thead
    %tr
      %th Date of Booking
      %th Amount of Days
      %th Partner
      %th{ colspan: 3 }

  %tbody
    - @bookings.each do |booking|
      %tr
        %td= booking.date_of_stay
        %td= booking.amount_of_days
        %td= booking.partner.name
        %td= link_to 'Show', booking
        %td= link_to 'Edit', edit_booking_path(booking)
        %td= link_to 'Destroy', booking, data: { turbo_method: :delete, turbo_confirm:  'Are you sure?' }

= link_to 'Back to Main Menu', root_path