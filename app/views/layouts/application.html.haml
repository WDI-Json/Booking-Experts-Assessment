%html
  %head{lang: I18n.locale }
    %title Bookify
    %meta{name: "description", content: "Your place for booking your stay during the holidays. Don't know what to do in the area? Try our AI suggestion tool!"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %meta{charset: "utf-8"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "main", "data-turbo-track": "reload"
    -# %link{rel: "stylesheet", href: "https://cdn.simplecss.org/simple.css"}
    = javascript_importmap_tags

  %body
    = render 'layouts/header'
    
    - if current_page?(root_url)
      %main.my-0
        = yield
    - else
      %main.container{ style: "--container-size: 65ch;" }
        -# TODO: check use
        -# - flash.each do |key, value|
        -#   .alert{ class: "alert alert-#{key}" }= value
        = yield

    = render 'layouts/footer'
